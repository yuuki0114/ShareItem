.header-content
  .header
    .header__left
      = link_to root_path, class: "application-name" do
        Shareitem
    .header__right
      .right
        - if user_signed_in?
          .right__lend-item
            = link_to "出品する", new_item_path, class: "right__lend-item--link"
          .right__user-config
            - if  current_user.credit_card.blank?
              = link_to "支払方法の登録", new_credit_card_path, class: "right__user-config--link"
            -else
              = link_to "支払方法の削除", credit_card_path(current_user.credit_card.id), method: :delete, class: "right__user-config--link"
          .right__logout
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: "right__logout--link"
        - else
          .right__login
            = link_to 'ログイン', new_user_session_path, class: "right__login--link"
          .right__signup
            = link_to '新規登録', new_user_registration_path, class: "right__signup--link"
              
