= render partial: "layouts/header"

.itemIndexWrapper
  .contents
    .contents__area
      .items
        - @items.each do |item|
          = link_to item_path(item.id), class: "item" do
            .image
              - if item.image?
                = image_tag item.image.url, size: "200x200"
              - else
                = image_tag "/default.png", size: "200x200"
            .detail
              .detail__name.testDeco
                = item.name
              .detail__info
                .price
                  = item.price
                  %span<>
                  円
                .detail__tax
                (税込)

= render partial: "layouts/footer"